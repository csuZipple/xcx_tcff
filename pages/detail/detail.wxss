/* pages/freeCar/freeCar.wxss */

.wrapper{
  height: 90%;
  background: #efefef;
}
.search-destination{
  height:60px;
  width: 90%;
  margin: 0 auto;

  display: flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
}
.search-input{
  width: 360rpx;
  height: 36px;
  border-radius: 5px;
  border: 1px solid #eee;
  padding: 5px;
  box-sizing: border-box;
  font-size: 12px;
}
.btn{
  width: 120rpx;
  height: 36px;
  border-radius: 5px;
  font-size: 14px;
  color: #fff;
  line-height: 36px;
}
.green{
  background: #11ef12;
}
.blue{
  background: lightblue;
}

.item{
  background: white;
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 2px 8px;
}
.item-title{
  width: 100%;
  height: 40px;

  display: flex;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
}

.item-title image{
  width: 30px;
  height: 30px;
  margin-right: 10px;
  border-radius: 50%;
}
.item-title text{
  font-size: 12px;
}
.item-tag{
  color:  black;
  font-size:15px;
}
.item-text{
  color: grey;
  font-size:15px;
}
.line{
  margin-top:3px;
  height:1px;
  background: lightgray;
  width: 100%;
}

textarea{
  margin: 0 auto;
  border: 1px gray solid;
  height:100px;
  width:85%;
}
.comment{
  margin-top: 20px;
}
.submit{
  margin-top: 10px;
  border-radius: 4px;
  width: 85%;
  color: white;
}
.comment-wrapper{
   margin-top:10px;
   background: white;
   padding:8px;
}
.comment-tag{
  
  margin-left:7.5%;
}
.bottom-wrapper{
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.bottom-botton{
  color: white;
  width:30%;
}

.comment-item{
    background: white;
  width: 100%;
  margin: 5px auto;
  box-sizing: border-box;
  padding: 4px 8px;
}