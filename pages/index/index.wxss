.search-input{
  margin: 5px 0 0 0;
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  border: 1px solid #e8e8e8;
  text-align: center;
  background: #efefef;
}
.input-placeholder{
  font-size: 12px;
}

.banner-container{

  padding-top: 5px;
  margin: 5px 0;
 
  width: 100%;
}

.banner-items image{
  width: 100%;
  height: 100%;
}

.info-container{
  width: 100%;


  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.item-container{
  width: 160rpx;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-content: space-around;
  flex-wrap: wrap;
}
.item-container image{
  width: 70%;
  height: 70%;
}
.item-container text{
  width: 100%;
  text-align: center;
  font-size: 14px;
}
.hot-info{
  margin-top: 10px;
  width: 100%;
}
.title{
  width: 100%;
  box-sizing: border-box;
  margin-left: 40rpx;
  padding-left: 10rpx;
  font-size: 14px;
  font-weight: 600;
  border-left: 3px solid #00f;
  margin-bottom: 20rpx;
}

.image-info{
  width: 90%;
  margin: 40rpx auto;

  padding: 5px;
  box-sizing: border-box;
  border-bottom: 1px solid #e8e8e8;

  display: flex;
  justify-content: space-around;

}
.image-info image{
  width: 220rpx;
  height: 180rpx;
  padding: 3px 5px;
}
.text-container{
  width: 400rpx;
  height: 180rpx;
  display: flex;
  align-content: space-around;
  flex-wrap: wrap;
}
.essay-title{
  width: 100%;
  max-height: 50%;
  font-weight: 500;
  font-size: 16px;
  color: #000;

  text-overflow: ellipsis;
}
.essay-summary{
  width: 100%;
  max-height: 50%;

  font-size: 14px;
  color: #888;
  text-overflow: ellipsis;
}