<scroll-view class="main">
   <!-- top  -->
   <block>
      <input class="search-input" placeholder-class="input-placeholder" placeholder="◎搜索一下" />
   <!--此处绑定enter事件实现搜索功能  -->
   </block>
   <!-- banner  -->
   <view class="banner-container">
       <image class="banner" src="../../resource/images/camera.jpg" mode="aspectFill"></image>
   </view>
   <view class="info-container">
       <block wx:for="{{infoType}}">
          <view class="item-container">
              <image mode="scaleToFill" src="{{item.imageUrl}}" bindtap="linkTo" data-link="{{item.link}}"></image>
              <text>{{item.text}}</text>
          </view>
       </block>
   </view>
   <!-- 附近热门  -->
   <view class="hot-info">
     <view class="title">附近热门</view>
     <block>
       <view class="image-info">
         <image mode="scaleToFill" src="../../resource/images/girl.jpg"></image>
         <view class="text-container">
           <view class="essay-title"> 
             安河桥-宋冬野 
           </view>
           <view class="essay-summary">
             让我再看你一眼从南到北，像是被五环路蒙住的双眼
           </view>
         </view>
       </view>
     </block>
   </view>
</scroll-view>