/* pages/freeCar/freeCar.wxss */
.main-wrapper{
  width: 100%;
 font-family: "黑体";
  background: #eee;
}
.wrapper{
  width: 100%;
  height: 100%;
  padding-top: 8px;
  box-sizing: border-box;
  background: #eee;
}
.white{
  background: white;
}
.search-destination{
  height:60px;
  width: 100%;
  margin: 0 auto;

  display: flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
}
.search-input{
  margin-left: 20px;
  width: 360rpx;
  height: 36px;
  border-radius: 5px;
  border: 1px solid #eee;
  padding: 5px;
  box-sizing: border-box;
  font-size: 12px;
}
.btn{
  width: 120rpx;
  height: 36px;
  border-radius: 5px;
  font-size: 14px;
  color: #fff;
  line-height: 36px;
}
.green{
  background: #11ef12;
}
.blue{
  background: lightblue;
}
.item{
  padding:10px;
  box-sizing: border-box;
  width: 100%;
  margin-top: 5px;
  margin-bottom: 5px;
}
.item-title{
  width: 100%;
  height: 40px;

  display: flex;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
}

.item-title image{
  width: 30px;
  height: 30px;
  margin-right: 10px;
  border-radius: 50%;
}
.item-title text{
  font-size: 20px;
}
.item-tag{
  color:  black;
  font-size:15px;
}
.item-text{
  color: grey;
  font-size:15px;
}
.line{
  margin-top:3px;
  height:1px;
  background: lightgray;
  width: 100%;
}