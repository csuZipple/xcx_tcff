/* pages/freeCar/freeCar.wxss */
.search-destination{
  height:60px;
  width: 90%;
  margin: 0 auto;

  display: flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
}
.search-input{
  width: 360rpx;
  height: 36px;
  border-radius: 5px;
  border: 1px solid #eee;
  padding: 5px;
  box-sizing: border-box;
  font-size: 12px;
}
.btn{
  width: 120rpx;
  height: 36px;
  border-radius: 5px;
  font-size: 14px;
  color: #fff;
  line-height: 36px;
}
.green{
  background: #11ef12;
}
.blue{
  background: lightblue;
}

.item{
  width: 90%;
  margin: 0 auto;
}
.item-title{
  width: 100%;
  height: 40px;

  display: flex;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
}

.item-title image{
  width: 40px;
  height: 40px;
  margin-right: 20px;
  border-radius: 50%;
}
.item-title text{
  font-size: 12px;
}